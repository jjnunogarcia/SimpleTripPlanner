<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

    <AutoCompleteTextView
            android:id="@+id/planner_origin_edittext"
            android:layout_width="@dimen/city_field"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:inputType="textCapSentences"
            android:hint="@string/origin"
            android:layout_marginTop="10dp"/>

    <AutoCompleteTextView
            android:id="@+id/planner_destination_edittext"
            android:layout_width="@dimen/city_field"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_below="@id/planner_origin_edittext"
            android:inputType="textCapSentences"
            android:hint="@string/destination"
            android:layout_marginTop="10dp"/>

    <EditText
            android:id="@+id/planner_date_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planner_destination_edittext"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginTop="10dp"/>

    <Button
            android:id="@+id/planner_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/planner_date_selected"
            android:text="@string/search"
            android:layout_marginTop="20dp"/>

</RelativeLayout>